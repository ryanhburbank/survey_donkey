
  <a href="/surveys/new"><h1 class="profile-create">Create A Survey!</h1></a>
  <div class="all-surveys">
    <h2 class="list-title">All Surveys</h2>
    <ul>
     <% @surveys.each do |survey| %>
      <li class="survey-list"> <%= survey.title  %> 
        <div class='profile-buttons'>
          <a href="/survey/<%= survey.id %>/edit"><button class="btn">Edit</button></a>
          <a href="/survey/<%= survey.id %>/send"><button class="btn">Send</button></a>    
          <a href="/survey/<%= survey.id %>/results"><button class="btn">Results</button></a>
          <a href="/survey/<%= survey.id %>/delete"><button class="btn">Delete</button></a> 
        </div>
      </li>
      <% end %>
    </ul> 
  </div>

  <div class="sent-surveys">
    <h2 class="list-title">Sent Surveys</h2>
    <ul class="survey-list">
      <% if @sent_surveys %>
        <% @sent_surveys.each do |survey| %>
          <li> <%= survey.title  %> 
            <div class='profile-buttons'>
              <a href="/survey/<%= survey.id %>/edit"><button class="btn">Edit</button></a>
              <a href="/survey/<%= survey.id %>/send"><button class="btn">Send</button></a>    
              <a href="/survey/<%= survey.id %>/results"><button class="btn">Results</button></a>    
              <a href="/survey/<%= survey.id %>/delete"><button class="btn">Delete</button></a>  
            </div>  
          </li>
        <% end %>
      <% end %>
    </ul> 
  </div>

